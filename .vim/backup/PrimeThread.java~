package primeui;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

/**
 * @author Sesh Venugopal
 *
 */
public class PrimeThread extends Thread {
	
	static int n;
	static int p;
	static int count;
	
	public PrimeThread() {
		start();   // THIS WILL SET UP A NEW THREAD, AND CALL RUN IN THAT THREAD
		//run();   // THIS WILL NOT START A NEW THREAD
	}
	
	public void run() {   // will be run in a separate thread
		count=0;
		p=2;
		while (p <= n) {
			int d;
			for (d=2; d <= p/2; d++) {
				if ((p % d) == 0) {
					break;
				}
			}
			if (d > p/2) {
				count++;
			}
			p++;
		}
	}
	
	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		System.out.print("Enter integer bound => ");
		n = Integer.parseInt(br.readLine());
		
		// launches a new, independent thread because the PrimeThread
		// constructor calls start()
		new PrimeThread();
		
		// main thread continues to interact with user
		while (true) {
			System.out.print("? ");
			String line = br.readLine();
			System.out.println("AT " + (p-1) + ", number of primes so far : " + count);
			if ((p == (n+1)) || line.equals("quit")) {
				break;
			} 
		}
	}
}

import java.util.*;

public class WordSearch {

    /*
     * Input: String, full String containing contents of text file
     * Output: HashMap<String,Integer> containing each word as key and first location as value
     */
    private static HashMap<String,Integer> preCompute(String input) {
	int count = 0;
	HashMap<String, Integer> map = new HashMap<String, Integer>();
	String[] words = input.split(" ");
	for (String word : words) {
	   if (map.containsKey(word)){
	       count++;
	       continue; 
	   }
	   else {
	       map.put(word, count);
	       count++;
	   }
	}
	return map;
    }
    
    private static void search(HashMap<String,Integer> map, ArrayList<String> input) {
	System.out.println("Found: ");
	for (String word : input){
	    if (map.containsKey(word)) {
		System.out.println(word + " [" + map.get(word) + "]");
	    }
	}
    }

    public static void main(String[] args) {
	//File file = new File("/string.txt");		
	String input = "hello world";
	System.out.println("Your current source string is: " + input);
	System.out.println("To edit, see line 37 in WordSearch.java\nI apologize for lack of file input.");

	ArrayList<String> terms = new ArrayList<String>();
	Scanner sc = new Scanner(System.in);

	System.out.println("How many terms do you want to search for?");
	int max = sc.nextInt();
	
	System.out.println("Enter in your search terms: ");
	while (max > 0){
	    System.out.println("Enter in your search terms: ");
	    terms.add(sc.next());
	    max--;
	}
	
	HashMap<String, Integer> map = preCompute(input);
	search(map, terms);	
    }
}
